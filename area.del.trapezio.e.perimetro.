 #include <stdio.h>
 #include <math.h>
 
 int main()
 { 
 int base_min, base_mag, l1,l2,h; //dichiarare input
 int perimetro,area; //output
 printf(" inserisici base minore ");
 scanf("%d",&base_min );
 printf("inserisci base maggiore ");
 scanf("%d",&base_mag);
 printf(" inserisici il primo lato ");
 scanf("%d",&l1);
 printf(" inserisci secondo lato ");
 scanf("%d",&l2);
 printf(" inserisci altezza ");
 scanf("%d",&h);
 perimetro = base_min + base_mag + l1 + l2;
 area = ((base_min + base_mag) * h ) /2;
 printf(" il perimetro e' %d \n ", perimetro);
 printf(" l'area e' %d", area);
 return 0;
}
